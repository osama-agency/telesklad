  text-align: left;
  transition: background-color 0.2s ease;

  &:hover {
    background-color: #f8f9fa;
  }

  .faq-question-text {
    font-size: clamp(14px, 3.5vw, 16px);
    font-weight: 500;
    flex: 1;
    padding-right: 16px;
    color: #3D4453;
    line-height: 1.4;
  }

  .faq-toggle-icon {
    transition: transform 0.2s ease;
    color: #8e8e93;

    &.open {
      transform: rotate(180deg);
    }
  }
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
  background-color: #f8f9fa;

  &.open {
    max-height: 1000px;
    transition: max-height 0.5s ease-in;
  }

  .faq-answer-content {
    padding: clamp(4px, 1vw, 8px) clamp(16px, 4vw, 20px) clamp(16px, 4vw, 20px);
    font-size: clamp(13px, 3.25vw, 15px);
    color: #666;
    line-height: 1.6;
  }
}

/* Информация о поддержке */
.support-info {
  background: white;
  border-radius: 12px;
  padding: clamp(16px, 4vw, 20px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.support-info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: clamp(14px, 3.5vw, 16px);
  font-size: clamp(13px, 3.25vw, 15px);
  line-height: 1.5;

  &:last-child {
    margin-bottom: 0;
  }

  .support-info-label {
    min-width: 90px;
    color: #8e8e93;
    font-weight: 500;
    margin-right: 8px;
  }

  .support-info-value {
    color: #3D4453;
    
    &.link {
      color: #48C928;
      text-decoration: none;
      font-weight: 500;

      &:hover {
        text-decoration: underline;
      }
    }
  }
}



/* Современный адаптивный дизайн для пустой корзины */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 1rem;
  width: 100%;
}

.empty-state-content {
  background: white;
  border-radius: 24px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04), 0 4px 24px rgba(0, 0, 0, 0.06);
  padding: 3rem 2rem;
  max-width: 420px;
  width: 100%;
  text-align: center;
}

.empty-state-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 2rem;
  width: 80px;
  height: 80px;
  background: #F3F4F6;
  border-radius: 50%;
  color: #9CA3AF;
}

.empty-state-icon svg {
  width: 40px;
  height: 40px;
}

.empty-state-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #1F2937;
  margin: 0 0 0.75rem;
  line-height: 1.3;
  letter-spacing: -0.02em;
}

.empty-state-subtitle {
  font-size: 1rem;
  color: #6B7280;
  margin: 0 0 2rem;
  line-height: 1.6;
  font-weight: 400;
  max-width: 300px;
  margin-left: auto;
  margin-right: auto;
}

.empty-state-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #48C928;
  color: white;
  font-weight: 600;
  font-size: 1rem;
  padding: 0.875rem 2.5rem;
  border-radius: 14px;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
  min-height: 52px;
  line-height: 1.2;
  white-space: nowrap;
  box-shadow: 0 1px 2px rgba(72, 201, 40, 0.1), 0 4px 12px rgba(72, 201, 40, 0.15);
}

.empty-state-button:hover {
  background: #3AA120;
  transform: translateY(-1px);
  box-shadow: 0 2px 4px rgba(72, 201, 40, 0.15), 0 8px 16px rgba(72, 201, 40, 0.2);
}

.empty-state-button:active {
  transform: translateY(0);
  box-shadow: 0 1px 2px rgba(72, 201, 40, 0.1), 0 2px 8px rgba(72, 201, 40, 0.15);
}

/* Планшеты */
@media (max-width: 768px) {
  .empty-state {
    min-height: 50vh;
  }
  
  .empty-state-content {
    padding: 2.5rem 1.75rem;
    max-width: 380px;
    border-radius: 20px;
  }
  
  .empty-state-icon {
    width: 72px;
    height: 72px;
    margin-bottom: 1.75rem;
  }
  
  .empty-state-icon svg {
    width: 36px;
    height: 36px;
  }
  
  .empty-state-title {
    font-size: 1.375rem;
  }
  
  .empty-state-subtitle {
    font-size: 0.9375rem;
    margin-bottom: 1.75rem;
  }
  
  .empty-state-button {
    font-size: 0.9375rem;
    padding: 0.8125rem 2rem;
    min-height: 48px;
  }
}

/* Мобильные устройства */
@media (max-width: 480px) {
  .empty-state {
    min-height: calc(100vh - 200px);
    padding: 1rem;
  }
  
  .empty-state-content {
    padding: 2rem 1.5rem;
    max-width: 100%;
    border-radius: 16px;
  }
  
  .empty-state-icon {
    width: 64px;
    height: 64px;
    margin-bottom: 1.5rem;
  }
  
  .empty-state-icon svg {
    width: 32px;
    height: 32px;
  }
  
  .empty-state-title {
    font-size: 1.25rem;
    margin-bottom: 0.625rem;
  }
  
  .empty-state-subtitle {
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    max-width: 260px;
  }
  
  .empty-state-button {
    font-size: 0.9375rem;
    padding: 0.75rem 2rem;
    min-height: 44px;
    width: 100%;
    max-width: 280px;
    border-radius: 12px;
  }
}

/* Маленькие мобильные устройства */
@media (max-width: 360px) {
  .empty-state-content {
    padding: 1.75rem 1.25rem;
  }
  
  .empty-state-icon {
    width: 60px;
    height: 60px;
  }
  
  .empty-state-title {
    font-size: 1.125rem;
  }
  
  .empty-state-subtitle {
    font-size: 0.8125rem;
    max-width: 240px;
  }
  
  .empty-state-button {
    font-size: 0.875rem;
    padding: 0.6875rem 1.5rem;
    min-height: 42px;
  }
}

/* Поддержка safe area для iPhone */
@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .empty-state {
    padding-bottom: max(1rem, env(safe-area-inset-bottom));
  }
}
