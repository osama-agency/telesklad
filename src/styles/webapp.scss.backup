/* Анимация появления FAQ элементов */
.faq-container .main-block {
  animation: faq-fade-in 0.4s ease-out;
  animation-fill-mode: both;
  
  /* Поочередное появление элементов */
  &:nth-child(1) { animation-delay: 0.05s; }
  &:nth-child(2) { animation-delay: 0.1s; }
  &:nth-child(3) { animation-delay: 0.15s; }
  &:nth-child(4) { animation-delay: 0.2s; }
  &:nth-child(5) { animation-delay: 0.25s; }
  &:nth-child(6) { animation-delay: 0.3s; }
  &:nth-child(7) { animation-delay: 0.35s; }
  &:nth-child(8) { animation-delay: 0.4s; }
}

@keyframes faq-fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* DaData Suggestions Styles - Based on Rails Project */
.address-wrapper {
  position: relative;

  .suggestions-wrapper {
    display: block;
    position: absolute;
    background: #f6f6f6;
    padding: 10px;
    z-index: 100;
    width: 100%;
    border-radius: 8px;
    box-shadow: 0px 4px 16px 0px #3D44531A;
    margin-top: 4px;

    .suggestions {
      display: block;
      max-height: 200px;
      overflow-y: auto;
      padding-right: 8px;
      margin-right: -8px;

      /* Custom scrollbar - как в Rails проекте */
      &::-webkit-scrollbar {
        width: 15px;
      }

      &::-webkit-scrollbar-track {
        background: #f6f6f6;
        border: none;
        border-radius: 8px;
      }

      &::-webkit-scrollbar-thumb {
        background-color: #48C928;
        border-radius: 8px;
        border: 4px solid #f6f6f6;
      }

      &::-webkit-scrollbar-thumb:hover {
        background-color: #3AA120;
      }

      .suggestion-item {
        padding: 8px 0;
        cursor: pointer;
        font-size: 14px;
        width: 20px;
        color: #3D4453;
        border-bottom: 1px solid #e0e0e0;
        transition: all 0.2s ease;

        &:last-child {
          border-bottom: none;
        }

        &:hover, &.selected {
          color: #48C928;
          background-color: rgba(72, 201, 40, 0.05);
          padding-left: 8px;
          border-radius: 4px;
        }

        /* Первый элемент - заголовок */
        &:first-child {
          color: #808080;
          cursor: default;
          font-size: 12px;
          font-weight: 500;

          &:hover {
            color: #808080;
            background-color: transparent;
            padding-left: 0;
          }
        }
      }
    }
  }
}

/* Loading indicator для DaData */
.suggestion-item.loading {
  color: #48C928;
  font-style: italic;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* Адаптивность для DaData подсказок */
@media (max-width: 640px) {
  .suggestions-wrapper {
    padding: 8px;
    
    .suggestions {
      max-height: 150px;
      
      .suggestion-item {
        font-size: 13px;
        padding: 6px 0;
        
        &:first-child {
          font-size: 11px;
        }
      }
    }
  }
}

@media (max-width: 374px) {
  .suggestions-wrapper {
    padding: 6px;
    
    .suggestions {
      max-height: 120px;
      
      .suggestion-item {
        font-size: 12px;
        padding: 5px 0;
        
        &:first-child {
          font-size: 10px;
        }
      }
    }
  }
}

