/* Empty State Styles - Улучшенный мобильный дизайн */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 180px); /* Учитываем высоту header и bottom nav */
  padding: 1.5rem;
  background: linear-gradient(135deg, rgba(72, 201, 40, 0.02) 0%, rgba(24, 119, 242, 0.01) 100%);
  
  /* Удаляем вложенность для прямого применения стилей */
  flex-direction: column;
  text-align: center;
  max-width: 380px;
  margin: 0 auto;
  width: 100%;
  
  .empty-state-icon {
    margin-bottom: 1.5rem;
    position: relative;
    
    /* Создаем круговой фон с градиентом - мобильная версия */
    &::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100px;
      height: 100px;
      background: linear-gradient(135deg, rgba(72, 201, 40, 0.1) 0%, rgba(24, 119, 242, 0.05) 100%);
      border-radius: 50%;
      z-index: -1;
    }
    
    /* Пульсирующий эффект - мобильная версия */
    &::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 120px;
      height: 120px;
      background: linear-gradient(135deg, rgba(72, 201, 40, 0.05) 0%, rgba(24, 119, 242, 0.03) 100%);
      border-radius: 50%;
      z-index: -2;
      animation: pulse 3s ease-in-out infinite;
    }
    
    color: #8B9BAE;
    
    svg {
      position: relative;
      z-index: 1;
      opacity: 0.8;
      filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.08));
    }
  }
  
  h3 {
    font-size: 1.375rem;
    font-weight: 700;
    color: #2D3748;
    margin-bottom: 0.75rem;
    line-height: 1.25;
    letter-spacing: -0.01em;
  }
  
  p {
    font-size: 0.9375rem;
    color: #718096;
    margin-bottom: 2rem;
    line-height: 1.5;
    font-weight: 500;
    max-width: 300px;
    padding: 0 0.5rem;
  }
  
  button, .webapp-btn {
    background: linear-gradient(135deg, #48C928 0%, #3AA120 100%);
    color: white;
    font-weight: 700;
    font-size: 1rem;
    padding: 1rem 2rem;
    border-radius: 14px;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 200px;
    width: 100%;
    max-width: 280px;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 16px rgba(72, 201, 40, 0.25);
    position: relative;
    overflow: hidden;
    /* Добавляем touch-friendly размер */
    min-height: 48px;
    
    /* Эффект мерцания */
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
      );
      transition: left 0.6s ease;
    }
    
    &:hover {
      background: linear-gradient(135deg, #3AA120 0%, #2E8B1C 100%);
      transform: translateY(-2px);
      box-shadow: 0 8px 32px rgba(72, 201, 40, 0.4);
      
      &::before {
        left: 100%;
      }
    }
    
    &:active {
      transform: translateY(0) scale(0.98);
      transition-duration: 0.1s;
      box-shadow: 0 4px 16px rgba(72, 201, 40, 0.3);
    }
  }
  
  /* Адаптивность для телефонов */
  @media (max-width: 768px) {
    min-height: calc(100vh - 160px);
    padding: 1rem;
    
    .empty-state-icon {
      margin-bottom: 1.25rem;
      
      &::before {
        width: 90px;
        height: 90px;
      }
      
      &::after {
        width: 110px;
        height: 110px;
      }
    }
    
    h3 {
      font-size: 1.25rem;
      margin-bottom: 0.625rem;
    }
    
    p {
      font-size: 0.875rem;
      margin-bottom: 1.75rem;
      max-width: 280px;
      padding: 0 1rem;
    }
    
    button, .webapp-btn {
      font-size: 0.9375rem;
      min-width: 240px;
      padding: 0.875rem 1.5rem;
      max-width: 90%;
    }
  }
  
  /* Очень маленькие экраны */
  @media (max-width: 480px) {
    padding: 0.75rem;
    min-height: calc(100vh - 140px);
    
    .empty-state-icon {
      margin-bottom: 1rem;
      
      &::before {
        width: 80px;
        height: 80px;
      }
      
      &::after {
        width: 100px;
        height: 100px;
      }
    }
    
    h3 {
      font-size: 1.125rem;
      margin-bottom: 0.5rem;
    }
    
    p {
      font-size: 0.8125rem;
      margin-bottom: 1.5rem;
      max-width: 260px;
      padding: 0 0.75rem;
    }
    
    button, .webapp-btn {
      font-size: 0.875rem;
      min-width: 200px;
      padding: 0.75rem 1.25rem;
      max-width: 85%;
    }
  }
  
  /* Ландшафтная ориентация на телефонах */
  @media (max-height: 500px) and (orientation: landscape) {
    min-height: calc(100vh - 120px);
    padding: 0.5rem;
    
    .empty-state-icon {
      margin-bottom: 0.75rem;
      
      &::before {
        width: 70px;
        height: 70px;
      }
      
      &::after {
        width: 90px;
        height: 90px;
      }
    }
    
    h3 {
      font-size: 1rem;
      margin-bottom: 0.375rem;
    }
    
    p {
      font-size: 0.75rem;
      margin-bottom: 1rem;
      max-width: 240px;
    }
    
    button, .webapp-btn {
      font-size: 0.8125rem;
      padding: 0.625rem 1rem;
      min-height: 40px;
    }
  }
}

/* Анимация пульсации */
@keyframes pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.1;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.05);
    opacity: 0.05;
  }
}

