    .mt-2 .text-xs {
      color: #64748b;
      background: rgba(248, 250, 252, 0.5);
      border-color: rgba(203, 213, 225, 0.2);
      text-shadow: 0 1px 2px rgba(255, 255, 255, 0.6);
      
      &::before {
