/* Разделительная линия описания */
.product-description-line {
  width: 100%;
  height: 1px;
  margin: 16px 0;
  background-color: #F0F0F0;
}

/* Описание товара */
.product-description {
  font-weight: 500;
  font-size: 12px;
  line-height: 16px;
  color: #3D4453;
}

/* Кнопка "Оставить отзыв" */
.btn-new-review {
  color: #48C928;
  font-weight: 600;
  margin-top: clamp(8px, 2vw, 12px);
  display: inline-flex;
  align-items: center;
  background: none;
  border: none;
  cursor: pointer;
  font-family: inherit;
  font-size: clamp(14px, 3.5vw, 16px);
