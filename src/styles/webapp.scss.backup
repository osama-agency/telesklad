/* ===============================================
   BONUS SELECTOR SYSTEM - BEAUTIFUL STYLES
   =============================================== */

/* Анимация градиента для карточки бонусов */
@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* Основная карточка селектора бонусов */
.bonus-selector-card {
  background: linear-gradient(90deg, 
    rgba(248, 255, 248, 0.8) 0%, 
    rgba(255, 255, 255, 1) 25%, 
    rgba(248, 255, 248, 0.6) 50%, 
    rgba(255, 255, 255, 1) 75%, 
    rgba(248, 255, 248, 0.8) 100%);
  background-size: 200% 100%;
  animation: gradientShift 8s ease-in-out infinite;
  border: 1px solid rgba(72, 201, 40, 0.15);
  border-radius: 20px;
  padding: 20px;
  margin-bottom: 20px;
  position: relative;

  /* Заблокированное состояние */
  &.disabled {
    background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
    border-color: #e0e0e0;
  }
}

