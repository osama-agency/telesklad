/* ===============================================
   SEARCH OVERLAY STYLES - Modern UX/UI Design
   =============================================== */

/* Search Overlay */
.search-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  background: #fff;
  animation: fadeIn 0.25s ease-out;
}



.search-container {
  background: #fff;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  animation: slideIn 0.3s ease-out;
  position: relative;
  margin-top: 0;
}

.search-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 20px 16px;
  padding-top: max(env(safe-area-inset-top), 20px);
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background: #f5f5f7;
  border: 2px solid transparent;
  border-radius: 12px;
  padding: 0 16px;
  height: 44px;
  transition: all 0.2s ease;
  
  &:focus-within {
    background: #fff;
    border-color: #48C928;
    box-shadow: 0 0 0 3px rgba(72, 201, 40, 0.1);
  }
}

.search-icon {
  color: #8e8e93;
  margin-right: 12px;
  flex-shrink: 0;
  transition: color 0.2s ease;
  
  .search-input-wrapper:focus-within & {
    color: #48C928;
  }
}

.search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 16px;
  font-weight: 400;
  color: #3D4453;
  outline: none;
  line-height: 1.5;
  
  &::placeholder {
    color: #8e8e93;
    font-weight: 400;
  }
}

.search-clear {
  background: none;
  border: none;
  color: #8e8e93;
  padding: 4px;
  margin-left: 8px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  width: 24px;
  height: 24px;
  
  &:hover {
    background: #e8e8ea;
    color: #3D4453;
  }
  
  &:active {
    transform: scale(0.9);
  }
}

.search-close {
  background: none;
  border: none;
  color: #48C928;
  font-size: 16px;
  font-weight: 500;
  padding: 8px 12px;
  border-radius: 8px;
  transition: background 0.2s ease;
  
  &:hover {
    background: rgba(72, 201, 40, 0.1);
  }
  
  &:active {
    background: rgba(72, 201, 40, 0.2);
  }
}

.search-content {
  flex: 1;
  overflow-y: auto;
  padding: 0 16px 16px 16px;
  padding-bottom: max(env(safe-area-inset-bottom), 16px);
}

.search-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 32px;
  color: #8e8e93;
  
  .search-spinner {
    width: 20px;
    height: 20px;
    border: 2px solid #f0f0f0;
    border-top: 2px solid #48C928;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
}

.search-section {
  margin-top: 20px;
  
  &:first-child {
    margin-top: 16px;
  }
}

.search-section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.search-section-title {
  font-size: 18px;
  font-weight: 600;
  color: #3D4453;
  margin-bottom: 12px;
}

.search-clear-recent {
  background: none;
  border: none;
  color: #48C928;
  font-size: 14px;
        width: 20px;
  font-weight: 500;
  padding: 4px 8px;
  border-radius: 6px;
  transition: background 0.2s ease;
  
  &:hover {
    background: #f0f8f0;
  }
}

.search-results {
  display: flex;
  flex-direction: column;
  gap: 2px;
  max-height: 300px;
  overflow-y: auto;
  
  /* Серый скролл */
  &::-webkit-scrollbar {
    width: 6px;
  }
  
  &::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3px;
  }
  
  &::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 3px;
    
    &:hover {
      background: #a8a8a8;
    }
  }
  
  /* Для Firefox */
  scrollbar-width: thin;
  scrollbar-color: #c1c1c1 #f1f1f1;
}

.search-result-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
  background: #fff;
  
  &:hover {
    background: #f8f9fa;
    transform: translateX(4px);
  }
  
  &:active {
    background: #f0f8f0;
    transform: scale(0.98);
    transition-duration: 0.1s;
  }
}

.search-result-image {
  width: 48px;
  height: 48px;
  border-radius: 8px;
  overflow: hidden;
  background: #f8f9fa;
  flex-shrink: 0;
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

.search-result-info {
  flex: 1;
  min-width: 0;
}

.search-result-name {
  font-weight: 500;
  color: #3D4453;
  margin-bottom: 2px;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.search-result-category {
  font-size: 12px;
  color: #8e8e93;
  margin-bottom: 4px;
}

.search-result-price {
  display: flex;
  align-items: center;
  gap: 6px;
  
  .price-current {
    font-weight: 600;
    color: #48C928;
    font-size: 14px;
        width: 20px;
  }
  
  .price-old {
    font-size: 12px;
    color: #8e8e93;
    text-decoration: line-through;
  }
}

.search-result-arrow {
  color: #c7c7cc;
  flex-shrink: 0;
}

.search-no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 24px;
  text-align: center;
}

.search-no-results-icon {
  color: #c7c7cc;
  margin-bottom: 16px;
}

.search-no-results-title {
  font-size: 18px;
  font-weight: 600;
  color: #3D4453;
  margin-bottom: 8px;
}

.search-no-results-subtitle {
  color: #8e8e93;
  line-height: 1.4;
}

.search-recent {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.search-recent-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s ease;
  
  &:hover {
    background: #f8f9fa;
  }
}

.search-recent-icon {
  color: #8e8e93;
  flex-shrink: 0;
}

.search-recent-text {
  color: #3D4453;
  font-weight: 400;
}

.search-suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.search-suggestion-item {
  background: #f8f9fa;
  border: none;
  border-radius: 16px;
  padding: 8px 16px;
  font-size: 14px;
        width: 20px;
  color: #3D4453;
  cursor: pointer;
  transition: all 0.2s ease;
  
  &:hover {
    background: #48C928;
    color: #fff;
    transform: translateY(-1px);
  }
}



/* Search Page Styles */
.search-page {
  .search-header-section {
    margin-bottom: 20px;
  }
  
  .search-query-info {
    margin-bottom: 16px;
    
    h1 {
      font-size: 24px;
      font-weight: 700;
      color: #3D4453;
      margin: 0 0 4px 0;
    }
    
    .search-query {
      font-size: 16px;
      color: #48C928;
      font-weight: 600;
      margin: 0 0 4px 0;
    }
    
    .search-results-count {
      font-size: 14px;
        width: 20px;
      color: #8e8e93;
      margin: 0;
    }
  }
  
  .search-no-results-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 64px 24px;
    text-align: center;
    
    .search-no-results-icon {
      color: #c7c7cc;
      margin-bottom: 24px;
    }
    
    .search-no-results-title {
      font-size: 24px;
      font-weight: 600;
      color: #3D4453;
      margin: 0 0 12px 0;
    }
    
    .search-no-results-subtitle {
      color: #8e8e93;
      line-height: 1.4;
      margin: 0 0 32px 0;
      max-width: 280px;
    }
    
    .search-back-button {
      background: #48C928;
      color: white;
      border: none;
      border-radius: 12px;
      padding: 12px 24px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      
      &:hover {
        background: #3AA120;
        transform: translateY(-1px);
      }
      
      &:active {
        transform: translateY(0);
      }
    }
  }
}

/* Search Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideDown {
  from { 
    transform: translateY(-100%);
    opacity: 0;
  }
  to { 
