/* ===============================================
   PROFILE PAGE ANIMATIONS
   =============================================== */

/* Анимация махания рукой при загрузке страницы профиля */
.waving-hand {
  display: inline-block;
  animation: wave 1.2s ease-in-out 2;
  transform-origin: 70% 70%;
}

@keyframes wave {
  0%, 100% { 
    transform: rotate(0deg); 
  }
  10%, 30%, 50%, 70%, 90% { 
    transform: rotate(20deg); 
  }
  20%, 40%, 60%, 80% { 
    transform: rotate(-10deg); 
  }
}

/* Задержка анимации для плавного появления */
.profile-page .waving-hand {
  animation-delay: 0.5s;
  opacity: 0;
  animation-fill-mode: both;
}

@keyframes wave-with-fade {
  0% { 
    opacity: 0;
    transform: rotate(0deg); 
  }
  5% {
    opacity: 1;
  }
  10%, 30%, 50%, 70%, 90% { 
    opacity: 1;
    transform: rotate(20deg); 
  }
  20%, 40%, 60%, 80% { 
    opacity: 1;
    transform: rotate(-10deg); 
  }
  100% { 
    opacity: 1;
    transform: rotate(0deg); 
  }
}

/* Обновленная анимация с плавным появлением */
.profile-page .waving-hand {
  animation: wave-with-fade 1.2s ease-in-out 2;
  animation-delay: 0.5s;
  animation-fill-mode: both;
  transform-origin: 70% 70%;
}

/* ===============================================
   FORM PERSISTENCE INDICATORS
   =============================================== */

/* Индикаторы статуса сохранения */
.save-status {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  font-weight: 500;
  
  &.saving {
    color: #777777;
  }
  
  &.saved {
    color: #48C928;
  }
  
  .spinner {
    width: 12px;
    height: 12px;
    border: 1px solid #777777;
    border-top: 1px solid transparent;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Индикатор валидности формы */
.form-validation-warning {
  margin-top: 16px;
  padding: 12px 16px;
  background-color: #fefce8;
  border: 1px solid #fef3c7;
  border-radius: 8px;
  
  p {
    font-size: 14px;
        width: 20px;
    color: #92400e;
    margin: 0;
    
    &::before {
      content: '⚠️';
      margin-right: 8px;
    }
  }
}

/* Улучшенные стили для полей формы с состояниями */
.input-container {
  position: relative;
  
  .input-str {
    transition: all 0.2s ease;
    
    &:focus {
      border-color: #48C928;
      box-shadow: 0 0 0 3px rgba(72, 201, 40, 0.1);
    }
    
    &.error {
      border-color: #ef4444;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
    }
    
    &.success {
      border-color: #48C928;
    }
  }
  
  label {
    font-weight: 500;
    color: #3D4453;
    margin-bottom: 6px;
    display: block;
    
    &.required::after {
      content: ' *';
      color: #ef4444;
    }
  }
}

/* Анимация появления элементов формы */
.delivery-form {
  .input-container {
    animation: fade-in-up 0.3s ease-out;
    animation-fill-mode: both;
    
    &:nth-child(1) { animation-delay: 0.05s; }
    &:nth-child(2) { animation-delay: 0.1s; }
    &:nth-child(3) { animation-delay: 0.15s; }
    &:nth-child(4) { animation-delay: 0.2s; }
    &:nth-child(5) { animation-delay: 0.25s; }
    &:nth-child(6) { animation-delay: 0.3s; }
    &:nth-child(7) { animation-delay: 0.35s; }
    &:nth-child(8) { animation-delay: 0.4s; }
  }
}

@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Загрузочный плейсхолдер для формы */
