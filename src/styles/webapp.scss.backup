/* ===============================================
   СТИЛИ ДЛЯ КАРТОЧКИ ТОВАРА (PRODUCT DETAIL PAGE)
   =============================================== */

/* Основной блок карточки товара */
.card-main-block {
  padding: clamp(12px, 3vw, 16px) clamp(16px, 4vw, 20px) clamp(16px, 4vw, 24px);
  margin: 0 clamp(-16px, -4vw, -20px);
  background-color: white;

  .product-img {
    position: relative;
    padding-bottom: 8px;
    color: #48C928;
    height: 232px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: clamp(16px, 4vw, 20px);

    .img {
      width: 100%;
      height: 232px;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
    }
  }
}

/* Блоки контента */
.card-block {
  margin-left: clamp(-16px, -4vw, -20px);
  margin-right: clamp(-16px, -4vw, -20px);
  padding: clamp(16px, 4vw, 20px);
  background-color: white;
  box-shadow: 0px 4px 16px 0px #3D44531A, 0px 0px 8px 0px #3D44530D;
  margin-bottom: clamp(12px, 3vw, 16px);
}

/* Breadcrumb навигация */
.breadcrumb {
  margin-bottom: 8px;
  margin-top: 0;
  line-height: 1;
  display: flex;
  gap: 8px;
  align-items: center;

  li {
    display: inline-block;
    font-weight: 500;
    font-size: 12px;
    line-height: 16px;
    transition: all 0.5s;

    &:not(:last-child)::after {
      content: '/';
      margin: 0 5px;
      opacity: 60%;
    }

    a, button {
      background: none;
      border: none;
      color: inherit;
      text-decoration: none;
      cursor: pointer;
      padding: 0;
      font-family: inherit;
      font-size: inherit;
      font-weight: inherit;

      &:hover {
        color: #3AA120;
        opacity: 100%;
      }
    }
  }
}

/* Индикатор наличия товара */
.have-product-ico {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #48C928;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.have-product {
  font-weight: 500;
  font-size: 13px;
  color: #48C928;
}

.no-have-product {
  font-size: 13px;
  color: #777777;
}

/* Цены в карточке товара */
.card-price {
  font-weight: 700;
  font-size: 24px;
  line-height: 28px;
  display: flex;
  gap: 4px;
  align-items: start;
  color: #48C928;
}

.card-old-price {
  opacity: 40%;
  text-decoration: line-through;
  font-size: 16px;
  color: #777777;
}

/* Кнопка избранного */
.card-favorite {
  padding: 12px;
  border-radius: 12px;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 44px;
  min-height: 44px;
}

/* Заголовки секций */
.title-card {
  font-weight: 600;
  margin-bottom: 16px;
  color: #777777;
  font-size: clamp(14px, 3.5vw, 16px);
}

/* Список свойств товара */
.properties-list {
  list-style: none;
  padding: 0;
  margin: 0;

  li {
    font-size: 12px;
    line-height: 16px;
    margin-bottom: 12px;

    &:last-child {
      margin-bottom: 0;
    }

    .variable {
      width: 40%;
      max-width: 150px;
      color: #3D4453;
    }

    .value {
      font-weight: 500;
      text-align: right;
      color: #3D4453;
