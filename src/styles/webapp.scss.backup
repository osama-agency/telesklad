/* Modern Add to Cart Button - 2025 */
.add-to-cart-btn {
  position: relative;
  width: 100%;
  height: 48px;
  border: none;
  border-radius: clamp(12px, 3vw, 16px);
  background: linear-gradient(135deg, #48C928 0%, #3AA120 100%);
  color: white;
  font-weight: 600;
  font-size: clamp(14px, 3.5vw, 16px);
  font-family: inherit;
  cursor: pointer;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  
  &:hover:not(:disabled) {
    background: linear-gradient(135deg, #3AA120 0%, #2E8B1C 100%);
    transform: translateY(-1px);
    box-shadow: 0 8px 25px rgba(72, 201, 40, 0.4);
  }
  
  &:active:not(:disabled) {
    transform: scale(0.98);
    transition-duration: 0.1s;
  }
  
  &.animating {
    .btn-text {
      opacity: 0;
      transform: scale(0.8);
    }
    
    .btn-particles {
      opacity: 1;
      animation: particles-burst 0.3s ease-out;
    }
    
    transform: scale(0.95);
    background: linear-gradient(135deg, #48C928 0%, #48C928 100%);
  }
  
  .btn-text {
    position: relative;
    z-index: 2;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .btn-particles {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.8);
    border-top-color: white;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    z-index: 3;
  }
}

@keyframes particles-burst {
  0% {
    transform: translate(-50%, -50%) scale(0) rotate(0deg);
    opacity: 0;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2) rotate(180deg);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1) rotate(360deg);
    opacity: 0;
  }
}

