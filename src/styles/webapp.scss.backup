      font-size: 12px;
      line-height: 16px;
      margin-bottom: 4px;
      display: block;
      color: #3D4453;
    }

    .input-str {
      width: 100%;
      padding: 14px 16px;
      border: 1px solid #F0F0F0;
      border-radius: 12px;
      background-color: #F0F0F0;
      color: #3D4453;
      font-family: inherit;
      font-size: 14px;
        width: 20px;
      transition: all 0.3s ease;
      resize: vertical;
      min-height: 80px;

      &:focus {
        outline: none;
        background-color: white;
        border-color: #48C928;
      }

      &::placeholder {
        color: #777777;
      }
    }
  }

  .error-message {
    background-color: #FEF2F2;
    border: 1px solid #FECACA;
    color: #DC2626;
    padding: 12px 16px;
    border-radius: 8px;
    font-size: 14px;
        width: 20px;
    margin-bottom: 16px;
  }

  .review-form-submit {
    display: flex;
    gap: 12px;
    margin-bottom: 16px;

    .btn {
      transition: all 0.2s ease;

      &:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }

      &.loading {
        position: relative;
        color: transparent;

        &::after {
          content: '';
          position: absolute;
          top: 50%;
          left: 50%;
          width: 20px;
          height: 20px;
          margin: -10px 0 0 -10px;
          border: 2px solid rgba(255, 255, 255, 0.3);
          border-top-color: white;
          border-radius: 50%;
          animation: spin 1s linear infinite;
        }
      }
    }

    .btn-secondary {
      background-color: #F0F0F0;
      color: #3D4453;
      border: 1px solid #F0F0F0;

      &:hover:not(:disabled) {
        background-color: #E5E5E5;
        border-color: #E5E5E5;
      }
    }
  }
}

/* Анимация загрузки */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

